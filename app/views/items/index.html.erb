

<div id="bg">
  <img src="<%= asset_path( 'dark_360.jpg' ) %>" alt="background">
    <div class="main-title">
      <script>
        $(function(){
          $(".element").typed({
            strings: ["Welcome to R.L.'s Diner...", "Be careful what you wish for."],
            typeSpeed: 100
          });
        });
      </script>
      <div><p class="main-title-caption"><span class="element"></span></p></div>
    </div>
  </div>

<div class="row" data-equalizer>
  <% @categories.each do |category| %>
    <%= link_to "#{category.name}", category_path(category.id) %>
  <% end %>

  <div id="items">
    <ul>
      <% @items.each do |item| %>
        <li class="large-4 columns">
            <p><%= image_tag item.image.url(:medium) %></p>
            <%= item.title %>:
            <%= item.description %>,
            <%= number_to_currency item.price %><br>
            <%= link_to "View item", item %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
