  <ul class="admin-orders" id="mix-wrapper">
    <% @orders.each do |order| %>
      <br><li class="mix-target <%= order.status %>"><%= link_to "Order created on #{order.formatted_date}", admin_torder_path(order) %><br>
      Status: <%= order.status.capitalize %>
      <% if order.status == "ordered" %>
        <%= button_to "Mark as paid", admin_order_path(order, status: "paid"), method: :patch, class: "tiny button radius" %>
      <% elsif order.status == "paid" %>
        <%= button_to "Mark as completed", edit_admin_order_path(order, status: "complete"), method: :patch, class: "tiny button radius" %>
      <% end %>
      <% if order.status == "ordered" || order.status == "paid" %>
        <%= button_to "Cancel", edit_admin_order_path(order, status: "cancelled"), method: :patch, class: "tiny button radius" %></li>
      <% end %>
    <% end %>
  </ul>
</div>
