<h1>Create New Item</h1>

<%= form_for [:admin, @item], html: {multipart: true} do |f| %>
  <%= f.label :title %><br>
  <%= f.text_area :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.label :price %><br>
  <%= f.text_area :price %><br>

  <!-- <div id="category-checkboxes"> -->
    <ul>
      Categories<br>
      <% Category.all.each do |category| %>
        <!-- <li id="box_#{category.id}"> -->
          <%= check_box_tag "item[category_ids][]", category.id %>
          <%= category.name %><br>
        <!-- </li> -->
      <% end %>
    </ul>
  <!-- </div> -->

  <% if @item.image.exists? %>
    <%= image_tag @item.image.url %><br/>
  <% end %>

  <%= f.label :image, "Attach an Image" %>
  <%= f.file_field :image %>

  <%= f.submit "Create item" %><br>
<% end %>
