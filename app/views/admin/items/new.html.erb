<h1>Create New Item</h1>

<%= form_for [:admin, @item], html: {multipart: true} do |f| %>
  <%= f.label :title %><br>
  <%= f.text_area :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.label :price %><br>
  <%= f.text_area :price %><br>

  <%= f.label :retired %>
  <%= hidden_field_tag :retired, "false" %>
  <%= check_box_tag :retired, value = "true" %><br>

  <%= f.label :categories %>
  <%= f.collection_check_boxes(:category_ids, @categories.to_a, :id, :name) %><br>

  <% if @item.image.exists? %>
    <%= image_tag @item.image.url %><br/>
  <% end %>
  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %>

  <%= f.submit "Create item" %><br>
<% end %>
